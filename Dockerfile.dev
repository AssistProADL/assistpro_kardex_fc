FROM php:8.3-fpm

# Instalar Nginx, Supervisor y dependencias
RUN apt-get update && apt-get install -y --no-install-recommends \
    nginx supervisor \
    git curl zip unzip ca-certificates \
    libfreetype6-dev libjpeg62-turbo-dev libpng-dev \
    libonig-dev libxml2-dev libicu-dev libzip-dev zlib1g-dev \
  && rm -rf /var/lib/apt/lists/*

# Instalar extensiones de PHP
RUN docker-php-ext-configure gd --with-freetype --with-jpeg \
    && docker-php-ext-install pdo_mysql mbstring exif pcntl bcmath gd intl zip sockets

# Habilitar Xdebug para desarrollo
RUN pecl install xdebug \
    && docker-php-ext-enable xdebug

# Configurar PHP para desarrollo
RUN echo "upload_max_filesize = 100M" > /usr/local/etc/php/conf.d/uploads.ini \
    && echo "post_max_size = 100M" >> /usr/local/etc/php/conf.d/uploads.ini \
    && echo "max_execution_time = 300" >> /usr/local/etc/php/conf.d/uploads.ini \
    && echo "memory_limit = 512M" >> /usr/local/etc/php/conf.d/uploads.ini \
    && echo "display_errors = On" >> /usr/local/etc/php/conf.d/uploads.ini \
    && echo "error_reporting = E_ALL" >> /usr/local/etc/php/conf.d/uploads.ini

# Configurar Xdebug
RUN echo "xdebug.mode=debug" >> /usr/local/etc/php/conf.d/docker-php-ext-xdebug.ini \
    && echo "xdebug.client_host=host.docker.internal" >> /usr/local/etc/php/conf.d/docker-php-ext-xdebug.ini \
    && echo "xdebug.start_with_request=yes" >> /usr/local/etc/php/conf.d/docker-php-ext-xdebug.ini

# Configurar PHP-FPM para desarrollo (menos procesos)
RUN echo "[www]" > /usr/local/etc/php-fpm.d/zz-custom.conf \
    && echo "pm = dynamic" >> /usr/local/etc/php-fpm.d/zz-custom.conf \
    && echo "pm.max_children = 20" >> /usr/local/etc/php-fpm.d/zz-custom.conf \
    && echo "pm.start_servers = 5" >> /usr/local/etc/php-fpm.d/zz-custom.conf \
    && echo "pm.min_spare_servers = 3" >> /usr/local/etc/php-fpm.d/zz-custom.conf \
    && echo "pm.max_spare_servers = 10" >> /usr/local/etc/php-fpm.d/zz-custom.conf

# Instalar Composer
COPY --from=composer:latest /usr/bin/composer /usr/bin/composer

# Configurar directorio de trabajo
WORKDIR /var/www/html/assistpro_kardex_fc

# Copiar solo composer files primero (para cache de layers)
COPY composer.json composer.lock ./

# Instalar dependencias (con dev)
RUN composer install --optimize-autoloader

# Configurar Nginx
RUN echo 'server {\n\
    listen 7071;\n\
    server_name localhost;\n\
    root /var/www/html;\n\
\n\
    add_header X-Frame-Options "SAMEORIGIN";\n\
    add_header X-Content-Type-Options "nosniff";\n\
\n\
    index index.php index.html;\n\
    charset utf-8;\n\
\n\
    client_max_body_size 100M;\n\
\n\
    # Logs mÃ¡s verbosos para desarrollo\n\
    access_log /var/log/nginx/access.log;\n\
    error_log /var/log/nginx/error.log debug;\n\
\n\
    # Proteger archivos sensibles\n\
    location ~ /\.(?!well-known).* {\n\
        deny all;\n\
    }\n\
    location ~ ^/assistpro_kardex_fc/(storage|vendor|app|bootstrap|src)/ {\n\
        deny all;\n\
    }\n\
    location ~ (composer\.|\.env|artisan) {\n\
        deny all;\n\
    }\n\
\n\
    # Manejo principal - redirigir / a /assistpro_kardex_fc/\n\
    location = / {\n\
        return 301 /assistpro_kardex_fc/;\n\
    }\n\
\n\
    location / {\n\
        try_files $uri $uri/ /assistpro_kardex_fc/index.php?$query_string;\n\
    }\n\
\n\
    # PHP con timeouts largos para debugging\n\
    location ~ \.php$ {\n\
        fastcgi_pass 127.0.0.1:9000;\n\
        fastcgi_param SCRIPT_FILENAME $realpath_root$fastcgi_script_name;\n\
        include fastcgi_params;\n\
        fastcgi_read_timeout 3600;\n\
        fastcgi_send_timeout 3600;\n\
    }\n\
}' > /etc/nginx/sites-available/default

# Configurar Supervisor
RUN echo '[supervisord]\n\
nodaemon=true\n\
user=root\n\
logfile=/var/log/supervisor/supervisord.log\n\
pidfile=/var/run/supervisord.pid\n\
\n\
[program:php-fpm]\n\
command=php-fpm\n\
autostart=true\n\
autorestart=true\n\
priority=5\n\
stderr_logfile=/dev/stderr\n\
stderr_logfile_maxbytes=0\n\
stdout_logfile=/dev/stdout\n\
stdout_logfile_maxbytes=0\n\
\n\
[program:nginx]\n\
command=nginx -g "daemon off;"\n\
autostart=true\n\
autorestart=true\n\
priority=10\n\
stderr_logfile=/dev/stderr\n\
stderr_logfile_maxbytes=0\n\
stdout_logfile=/dev/stdout\n\
stdout_logfile_maxbytes=0' > /etc/supervisor/conf.d/supervisord.conf

RUN mkdir -p /var/log/supervisor

# Crear entrypoint para desarrollo
RUN echo '#!/bin/bash\n\
set -e\n\
\n\
echo "=== ðŸ”§ Modo Desarrollo - AssistPro Kardex FC ==="\n\
\n\
# Crear directorios si no existen (por si el volumen estÃ¡ vacÃ­o)\n\
mkdir -p /var/www/html/assistpro_kardex_fc/storage/logs\n\
mkdir -p /var/www/html/assistpro_kardex_fc/logs\n\
\n\
# Permisos permisivos para desarrollo\n\
chown -R www-data:www-data /var/www/html/assistpro_kardex_fc/storage || true\n\
chown -R www-data:www-data /var/www/html/assistpro_kardex_fc/logs || true\n\
chmod -R 777 /var/www/html/assistpro_kardex_fc/storage || true\n\
chmod -R 777 /var/www/html/assistpro_kardex_fc/logs || true\n\
\n\
echo "âœ… Directorios configurados"\n\
echo "ðŸ› Xdebug habilitado"\n\
echo "ðŸš€ Iniciando servicios..."\n\
echo "ðŸ“ MySQL: mysql:3306"\n\
echo "ðŸ“ App: http://localhost:7070"\n\
echo "ðŸ“ PhpMyAdmin: http://localhost:8081"\n\
\n\
exec /usr/bin/supervisord -c /etc/supervisor/conf.d/supervisord.conf' > /docker-entrypoint.sh

RUN chmod +x /docker-entrypoint.sh

EXPOSE 7071

ENTRYPOINT ["/docker-entrypoint.sh"]
